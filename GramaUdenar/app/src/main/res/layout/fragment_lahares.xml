<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.gan091.gramaudenar.LaharesFragment"
    android:id="@+id/fragment_lahares">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:fontFamily="sans-serif"
                android:text="LAHARES - PRESION DINAMICA"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Estructura:"
                    android:textSize="15dp"
                    android:layout_marginLeft="55sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reforzado"
                    android:textSize="15dp"/>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Muros:"
                    android:textSize="15dp"
                    android:layout_marginLeft="55sp"/>

                <Spinner
                    android:id="@+id/spMuros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Estado General EdificaciÃ³n:"
                    android:textSize="15dp"
                    android:layout_marginLeft="55sp"/>

                <Spinner
                    android:id="@+id/spEstGenEd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="OBSERVACIONES"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/etObservacionesLahares"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:ems="10"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLength="200"
                android:focusedByDefault="false"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Area de Resultados"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:gravity="center_horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/tvEst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="30%"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:id="@+id/tvMur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="50%"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="20%"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RESULTADO"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="4">

                <EditText
                    android:id="@+id/etPE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#DBA901"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:editable="false"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="0.5sp"/>

                <EditText
                    android:id="@+id/etPMM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#DBA901"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:editable="false"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="10sp"/>

                <EditText
                    android:id="@+id/etPEG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#DBA901"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:editable="false"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="10sp"/>

                <EditText
                    android:id="@+id/etResultadoLahares"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#DBA901"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:editable="false"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvTipLahares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipologia Lahares"
                    android:textSize="15dp"
                    android:layout_weight="0.5"/>

                <Spinner
                    android:id="@+id/spLahares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnGenerarL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generar Tipificacion"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
