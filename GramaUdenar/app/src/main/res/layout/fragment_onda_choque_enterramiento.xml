<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.gan091.gramaudenar.OndaChoqueEnterramientoFragment"
    android:id="@+id/fragment_onda">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tabOndaChoqueEnterramiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="70dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:fontFamily="sans-serif"
                android:text="ONDA DE CHOQUE / ENTERRAMIENTO"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:layout_marginTop="15dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Fachada de Vivienda:"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnFachViv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"
                    android:onClick="onClick"
                    android:text="+"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Ventanas: "
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnVen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:onClick="onClick"
                    android:text="+"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Material Ventana: "
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spMatVentana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Marco Ventana: "
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spVentana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvPuertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Puertas: "
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnPuertas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:onClick="onClick"
                    android:text="+"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Material Piso: "
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spMatPiso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="OBSERVACIONES"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etObservaciones"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:ems="10"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLength="200"
                android:focusedByDefault="false"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Area de Resultados"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvPAb"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pocentaje Aberturas"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTipOnCh"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tipologia Onda de Choque"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margen_izquierda"
                android:layout_marginRight="@dimen/margen_derecha"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etPAb"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_weight="0.5"
                    android:background="#DBA901"
                    android:editable="false"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spTipOn"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="2">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvAb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="0.5"
                    android:onClick="onClick"
                    android:text="70%"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="0.5"
                    android:onClick="onClick"
                    android:text="30%"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="1"
                    android:text="RESULTADO"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etPAE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.5sp"
                    android:layout_weight="0.5"
                    android:background="#DBA901"
                    android:editable="false"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etPCE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="0.5"
                    android:background="#DBA901"
                    android:editable="false"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etRE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="#DBA901"
                    android:editable="false"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvTipEnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Tip. Enterramiento"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spTipEnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <Button
                android:id="@+id/btnGenerar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generar Tipificacion"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
